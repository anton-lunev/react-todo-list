.filters {
  display: flex;
  align-items: center;

  &__item + &__item {
    margin-left: 30px;
  }
}

.search-field {
  position: relative;

  &__input {
  }
  &__button {
    position: absolute;
    right: 2px;
    top: 2px;
    background: #ffc80a;
    border-radius: 50%;
    color: #fff;
    height: 31px;
    width: 31px;
    text-align: center;
    padding: 0 0 0 1px;
    &:hover {
      background: #f8c10a;
    }

    & i {
      font-size: 22px;
    }
  }
}

